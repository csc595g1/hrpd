<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.depaul.csc595.jarvis">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.RewardsActivity"
            android:label="@string/title_activity_rewards"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.PreventionActivity"
            android:label="@string/title_activity_prevention"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.AppliancesActivity"
            android:label="@string/title_activity_appliances"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
