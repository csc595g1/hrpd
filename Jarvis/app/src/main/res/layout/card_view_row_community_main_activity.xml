<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_community_main_act"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Image courtesy of Ambro at FreeDigitalPhotos.net-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:soundEffectsEnabled="false"
            android:src="@drawable/community_pic" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Jarvis Community"
                android:id="@+id/textView3"
                android:textColor="@color/lightBlue"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="27dp" />
            <include layout="@layout/border_gray"
                android:layout_width="250dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Check out the latest posts now!"
                android:id="@+id/cv_main_act_comm_click_tv"
                android:textColor="#3e9d25"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>