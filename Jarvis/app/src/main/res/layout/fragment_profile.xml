<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".profile.ProfileActivity$PlaceholderFragment"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/lightGray"
        android:paddingLeft="135dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Change Profile Picture"
            android:id="@+id/prof_change_pic"
            android:textColor="@color/lightBlue"
            android:layout_alignBottom="@+id/imageView_profile"
            android:layout_toEndOf="@+id/imageView_profile" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout6"
        android:id="@+id/linearLayout"
        android:layout_marginTop="25dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/profile_name"
            android:id="@+id/frag_prof_name_lbl"
            android:inputType="none"
            android:layout_marginRight="73dp"
            android:textColor="@color/orange_A700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="25dp"
            android:fontFamily="sans-serif-light"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:id="@+id/frag_prof_name"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/profile_email"
            android:id="@+id/frag_prof_email_lbl"
            android:layout_marginRight="75dp"
            android:textColor="@color/orange_A700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="25dp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="csc595g1@gmail.com"
            android:id="@+id/frag_prof_email"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/profile_reward_points"
            android:id="@+id/frag_prof_points_lbl"
            android:layout_marginRight="68dp"
            android:textColor="@color/orange_A700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="25dp"
            android:fontFamily="sans-serif-light"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/frag_prof_points"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Smart Products"
            android:id="@+id/textView2"
            android:lines="2"
            android:layout_marginRight="7dp"
            android:textColor="@color/orange_A700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="25dp"
            android:fontFamily="sans-serif-light"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/frag_prof_reg_devices"
            android:layout_gravity="bottom"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="REGISTER THIS DEVICE"
        android:id="@+id/button_register_device"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4"
        android:background="@color/orange_A700"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="25dp" />

</RelativeLayout>

